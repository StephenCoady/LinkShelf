{
  "manifest_version": 3,
  "name": "Linkshelf",
  "version": "1.0.0",
  "description": "A beautiful, visual bookmark dashboard that replaces your new tab page with organized categories and drag-and-drop functionality.",
  
  "chrome_url_overrides": {
    "newtab": "dashboard.html"
  },
  
  "permissions": [
    "storage",
    "favicon",
    "contextMenus",
    "activeTab"
  ],
  
  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "action": {
    "default_title": "Add to LinkShelf"
  },

  "background": {
    "service_worker": "background.js"
  },
  
  "commands": {
    "quick-add-bookmark": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "Quick add current page to LinkShelf inbox"
    }
  }
}
